@model ChangePasswordViewModel
@{
    ViewData["Title"] = "تغيير كلمة المرور ";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
    Layout = "_ProfileLayout";
}

@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="Confirm_password">
    <h3 class="signin-form__body__title">   تغيير كلمة المرور</h3>
    <p class="signin-form__body__sub">اكتب كلمة المرور الجديده واعد تكرارها حتي يتم تغير كلمة المرور والحفاظ علي امن حسابك الشخصي</p>
    <form method="post">
        <div class="signin-form__form__inputs">
            @*<div asp-validation-summary="All" class="m-b-25 text-danger"></div>*@
            <input class="input-item" type="password" asp-for="OldPassword" placeholder="كلمة المرور القديمة ">
            <span asp-validation-for="OldPassword" class="text-danger"></span>

            <input class="input-item" type="password" asp-for="NewPassword" placeholder="كلمة المرور الجديدة ">
            <span asp-validation-for="NewPassword" class="text-danger"></span>

            <input class="input-item" type="password" placeholder=" تاكيد كلمة المرور" asp-for="ConfirmPassword">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn-green list-link__btn">تاكيد   </button>
    </form>
