@model SubjectViewModel

@{
    ViewData["Title"] = "اضافة مادة دراسية";
    Layout = "../Shared/_Layout.cshtml";


}

<h4 class="header-title m-t-0 m-b-30">@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="row">

                <div class="col-lg-8">

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CountryId" class="control-label"></label>
                        <select asp-for=" CountryId" class="form-control" asp-items="ViewBag.countries">
                            <option value="">---- اختر --- </option>


                        </select>
                        <span asp-validation-for="CountryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GradeId" class="control-label"></label>
                        <select asp-for="GradeId" class="form-control" asp-items="ViewBag.grades">
                            <option value="">---- اختر --- </option>


                        </select>
                        <span asp-validation-for="GradeId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TermId" class="control-label"></label>
                        <select asp-for="TermId" class="form-control" asp-items="ViewBag.terms">
                            <option value="">---- اختر --- </option>


                        </select>
                        <span asp-validation-for="TermId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="col-md-12 col-xs-12">
                        <div class="form-group">
                            <label class="col-md-3">الصورة <span class="required">*</span></label>
                            <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                            <input id="input-700" name="kartik-input-700[]" type="file" accept="image/*" class="file-loading">
                            <div id="errorBlock" class="help-block"></div>
                            @Html.HiddenFor(m => m.PhotoUrl, new { id = "txtImgUrl" })
                        </div>
                    </div>
                </div>
            </div>


          



            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DiscountPercentage" class="control-label"></label>
                <input asp-for="DiscountPercentage" class="form-control" />
                <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox checkbox-primary">
                    <input asp-for="IsPuplished" />
                    <label>
                        @Html.DisplayNameFor(model => model.IsPuplished)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" rows="10" cols="80"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="pull-right">
    <a asp-action="Index" class="btn btn-success btn-rounded waves-effect waves-light m-b-5" data-toggle="tooltip" title="">كل المواد >></a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_CkEditorPartial");}
    @{ Html.RenderPartial("_FileInputPartial");}
    <script src="~/js/app/lessons.js"></script>
}

