@model LessonLiveViewModel

@{
    ViewData["Title"] = "تعديل درس مباشر";
    Layout = "../Shared/_Layout.cshtml";


}

<h4 class="header-title m-t-0 m-b-30">@ViewData["Title"]</h4>


<div class="row">





    <div class="col-md-12">
        <form asp-action="Edit">

            <div class="row">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="col-lg-12">
                    <input asp-for="ClassId" type="hidden" />

                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CountryId" class="control-label"></label>
                        <select asp-for=" CountryId" class="form-control" asp-items="ViewBag.countries">
                            <option value="">اختر البلد</option>


                        </select>
                        <span asp-validation-for="CountryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GradeId" class="control-label"></label>
                        <select asp-for="GradeId" class="form-control" asp-items="ViewBag.grades">
                            <option value="">----اختر ----</option>


                        </select>
                        <span asp-validation-for="GradeId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TermId" class="control-label"></label>
                        <select asp-for="TermId" class="form-control" asp-items="ViewBag.terms">
                            <option value="">----اختر ----</option>

                        </select>
                        <span asp-validation-for="TermId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Subject" class="control-label"></label>
                        <select asp-for="Subject" class="form-control" asp-items="ViewBag.subjects">
                            <option value="">----اختر ----</option>

                        </select>
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BookId" class="control-label"></label>
                        <select asp-for="BookId" class="form-control" asp-items="ViewBag.books">
                            <option value="">----اختر ----</option>

                        </select>
                        <span asp-validation-for="BookId" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="LessonId" class="control-label"></label>
                        <select asp-for="LessonId" class="form-control" asp-items="ViewBag.lessons">
                            <option value="">----اختر ----</option>

                        </select>
                        <span asp-validation-for="LessonId" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="Presenter_email" class="control-label"></label>
                        <select asp-for="Presenter_email" class="form-control" asp-items="ViewBag.teachers">
                            <option value="">----اختر ----</option>

                        </select>
                        <span asp-validation-for="Presenter_email" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <div class="checkbox checkbox-primary">
                            <input asp-for="Create_recording" />
                            <label>
                                @Html.DisplayNameFor(model => model.Create_recording)
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Start_time" class="control-label"></label>
                        <input asp-for="Start_time" class="form-control" min="@DateTime.Now" />
                        <span asp-validation-for="Start_time" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Time_zone" class="control-label"></label>
                        <select asp-for="Time_zone" class="form-control" asp-items="ViewBag.timeZones">
                            <option value="">----اختر ----</option>
                        </select>
                        <span asp-validation-for="Time_zone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Duration" class="control-label"></label>
                        <input asp-for="Duration" class="form-control" />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Attendee_limit" class="control-label"></label>
                        <input asp-for="Attendee_limit" class="form-control" />
                        <span asp-validation-for="Attendee_limit" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Language_culture_name" class="control-label"></label>
                        <select asp-for="Language_culture_name" class="form-control" asp-items="ViewBag.languages">
                            <option value="">----اختر ----</option>

                        </select>
                        <span asp-validation-for="Language_culture_name" class="text-danger"></span>

                    </div>




                </div>


            </div>

            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>



        </form>
    </div>
</div>

<div class="pull-right">
    <a asp-action="Index" class="btn btn-success btn-rounded waves-effect waves-light m-b-5" data-toggle="tooltip" title="">كل الدروس>></a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{ Html.RenderPartial("_FileInputPartial");}


    <script src="~/js/app/Lessons.js"></script>

}

