                                        <i class="fa fa-user-o"></i> <span> المستخدمين </span>
                                    </a>
                                </li>


                            </ul>
                        </li>

                        <li class="has_sub">
                            <a href="javascript:void(0);" class="waves-effect">
                                <i class="fa fa-cc-mastercard"></i> <span>
                                    كروت الشحن
                                </span> <span class="menu-arrow"></span>
                            </a>
                            <ul class="list-unstyled">

                                <li>
                                    <a onclick="showPageLoadingSpinner()" asp-area="Admin" asp-controller="Codes" asp-action="Index" class="waves-effect">
                                        <i class="fa fa-cc-mastercard"></i> <span> كروت الشحن  </span>
                                    </a>
                                </li>
                                <li>
                                    <a onclick="showPageLoadingSpinner()" asp-area="Admin" asp-controller="Sellers" asp-action="Index"
                                       class="waves-effect">
                                        <i class="fa fa-user-o"></i> <span> الموزعين </span>
                                    </a>
                                </li>


                            </ul>
                        </li>

                        <li>
                            <a onclick="showPageLoadingSpinner()" asp-area="Admin" asp-controller="Transactions" asp-action="Index" class="waves-effect">
                                <i class="fa fa-money"></i> <span> المعاملات </span>
                            </a>
                        </li>




                    </ul>
                    <div class="clearfix"></div>
                </div>
                <!-- Sidebar -->
                <div class="clearfix"></div>

            </div>

        </div>
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container">

                    <div class="row">
                        @*@Html.Partial("_FlashMessage")
                            @Html.Partial("_Flash")*@

                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                @RenderBody()
                            </div>

                        </div>
                    </div>
                    <!-- End row -->

                </div> <!-- container -->

            </div> <!-- content -->

            <footer class="footer">
                Drossey © 2018
            </footer>

        </div>
