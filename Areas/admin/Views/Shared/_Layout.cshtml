                                        <span> الصفوف </span>
                                    </a>
                                </li>
                                <li>
                                    <a onclick="showPageLoadingSpinner()" asp-area="Admin" asp-controller="Terms" asp-action="Index" class="waves-effect">
                                        <i class="fa fa-calendar"></i> <span> التِرْمات </span>
                                    </a>
                                </li>
                                <li>
                                    <a onclick="showPageLoadingSpinner()" asp-area="Admin" asp-controller="Subjects" asp-action="Index" class="waves-effect">
                                        <i class="fa fa-newspaper-o"></i> <span> المواد الدراسية </span>
                                    </a>
                                </li>


                                <li>
                                    <a onclick="showPageLoadingSpinner()" asp-area="Admin" asp-controller="Modules" asp-action="Index" class="waves-effect">
                                        <i class="fa fa-book"></i> <span>الوحدات الدراسية</span>
                                    </a>
                                </li>

                                <li>
                                        <a onclick="showPageLoadingSpinner()" href="@Url.Action("index", "ContactUs")" class="waves-effect">
                                            <i class="fa fa-cog"></i> <span> اتصل بنا </span>
                                        </a>
                                    </li>



                            </ul>

                        </li>


                        <li class="has_sub">
                            <a href="javascript:void(0);" class="waves-effect">
                                <i class="fa fa-legal"></i> <span>
                                    الدروس
                                </span> <span class="menu-arrow"></span>
                            </a>
                            <ul class="list-unstyled">


                                <li>
                                    <a onclick="showPageLoadingSpinner()" asp-area="Admin" asp-controller="Lessons" asp-action="Index" class="waves-effect">
                                        <i class="fa fa-legal"></i> <span> الدروس </span>
                                    </a>
                                </li>
                                <li>
                                    <a onclick="showPageLoadingSpinner()" asp-area="Admin" asp-controller="LiveLessons" asp-action="Index" class="waves-effect">
                                        <i class="fa fa-television"></i> <span>الدروس المباشرة   </span>
                                    </a>
                                </li>
                                <li>
