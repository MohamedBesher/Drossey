@model Drossey.Data.Core.Models.ContactUs

@{
    ViewData["Title"] = "تفاصيل الرسالة";
    Layout = "../Shared/_Layout.cshtml";
}


<h4 class="header-title m-t-0 m-b-30">@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-12">
        <div class="profile-info-name">

            <div class="profile-info-detail">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label> :

                    @if (string.IsNullOrEmpty(Model.UserId))
                    {
                        @Html.DisplayFor(modelItem => Model.Name)


                    }
                    else
                    {

                        <a asp-action="Details" asp-controller="Users" asp-area="admin" asp-route-id="@Model.UserId">
                            @Html.DisplayFor(modelItem => Model.Name)
                        </a>
                    }
               
                </div>

                <div class="form-group">
                    <label asp-for="Message" class="control-label"></label> :
                    @Html.DisplayFor(model => model.Message)
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label> :
                    @Html.DisplayFor(model => model.Email)
                </div>

                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label> :
                    @Html.DisplayFor(model => model.Phone)
                </div>




              

                

            </div>
        </div>
    </div>





  


  




</div>


<div class="pull-right m-t-30">

    <a asp-action="Index" class="btn btn-success btn-rounded waves-effect waves-light m-b-5" data-toggle="tooltip" title="">كل  الرسائل  >></a>
</div>
