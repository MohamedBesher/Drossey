@model CodeViewModel
@using Drossey.Data.Core.Enum

@{
    ViewData["Title"] = "اضافة كارت";
    Layout = "../Shared/_Layout.cshtml";
   

}
@*<link href="~/lib/jquery-ui/jquery-ui.css" rel="stylesheet" />*@

<h4 class="header-title m-t-0 m-b-30">@ViewData["Title"]</h4>


<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Amount" class="control-label"></label>
                        <input asp-for="Amount" class="form-control"/>
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="form-group">                     
                        <label asp-for="Count" class="control-label"></label>
                        <input asp-for="Count" class="form-control" />
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
         
            <div class="form-group">
                <label asp-for="SellerId" class="control-label"></label>
                <select asp-for="SellerId" asp-items="@ViewBag.sellers" class="form-control">
                    <option value="">-- اسم الموزع -- </option>
                </select>
                <span asp-validation-for="SellerId" class="text-danger"></span>


            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="@Html.GetEnumSelectList(typeof(CodeStatus))" class="form-control">
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>

            
            </div>
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

    <div class="pull-right">
        <a asp-action="Index" class="btn btn-success btn-rounded waves-effect waves-light m-b-5" data-toggle="tooltip" title="">كل كروت الشحن >></a>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
      
    }

    @{ Html.RenderPartial("_FileInputPartial");}
