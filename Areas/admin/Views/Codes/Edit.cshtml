@model TermViewModel

@{
    ViewData["Title"] = "تعديل ترم";
    Layout = "../Shared/_Layout.cshtml";
 

}
<h4 class="header-title m-t-0 m-b-30">@ViewData["Title"]</h4>
<hr />
<div class="row">
    
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GradeId" class="control-label"></label>
                <select asp-for="GradeId" class="form-control" asp-items="ViewBag.grades"></select>
                <span asp-validation-for="GradeId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <div class="checkbox checkbox-primary">
                    <input asp-for="IsPuplished" />
                    <label>
                        @Html.DisplayNameFor(model => model.IsPuplished)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div class="pull-right">
    <a asp-action="Index" class="btn btn-success btn-rounded waves-effect waves-light m-b-5" data-toggle="tooltip" title="">كل كروت الشحن >></a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@{ Html.RenderPartial("_FileInputPartial");}
