@using Drossey.Data.Core.Enum
@model Drossey.Data.Core.Models.ApplicationUser

@{
    ViewData["Title"] = "تفاصيل المستخدم ";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="row">
  
        <div class="col-sm-12">
            <div class="">
                <div class="profile-info-name">
                    <img src="@ViewData["Uploads"]@Model.PhotoUrl" class="img-thumbnail" alt="profile-image" onerror="this.src ='/images/default.png'">

                    <div class="profile-info-detail">
                        <h3 class="m-t-0 m-b-0">@Model.FirstName</h3>
                        <p class="text-muted m-b-20"><i>
                            @if (Model.Gender!=null && Model.Gender.Value)
                            {
                                <span>Male</span>
                            }
                            else
                            {
                                <span>Female</span>

                            }
                        </i></p>
                        <div class="form-group">
                            <label class="control-label">الاسم بالكامل	</label> :
                            @Html.DisplayFor(model => model.FirstName)
                        </div>
                        
                        
                       

                        <div class="form-group">
                            <label class="control-label">المدينة</label> :
                            @Html.DisplayFor(model => model.Country.Name)
                        </div>
                        
                        
                        <div class="form-group">
                            <label class="control-label">البريد الالكترونى</label> :
                            @Html.DisplayFor(model => model.Email)
                        </div>
                        <div class="form-group">
                            <label class="control-label">الجوال</label> :
                            @Html.DisplayFor(model => model.PhoneNumber)
                        </div>
                        <div class="form-group">
                            <label class="control-label">الحالة</label> :
                            @if (Model.IsSuspended)
                            {
                                <span class="label label-danger">غير مفعل</span>
                            }
                            else
                            {
                                <span class="label label-success">مفعل</span>
                            }

                            

                        </div>
                        
                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>
            <!--/ meta -->







        </div>


  
</div>

<div class="pull-right">
    <a asp-action="Index" class="btn btn-success btn-rounded waves-effect waves-light m-b-5" data-toggle="tooltip" title="">كل المستخدمين >></a>
</div>



